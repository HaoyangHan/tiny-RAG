# TinyRAG Frontend Environment Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=TinyRAG
VITE_APP_VERSION=1.2.0
VITE_APP_DESCRIPTION=Document Processing and Memo Generation Platform

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MULTI_FORMAT=true
VITE_ENABLE_RAG_SETTINGS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VITE_MAX_FILE_SIZE=52428800  # 50MB
VITE_SUPPORTED_FORMATS=pdf,docx,png,jpg,jpeg,tiff
VITE_THEME=light

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_DEV_API_BASE_URL=http://localhost:8000
VITE_DEV_ENABLE_MOCK=false 